%Ejercicio_1


% Regla para calcular la ecuación de la recta y almacenarla en la memoria
calcular_y_almacenar_ecuacion((X1, Y1), (X2, Y2)) :-
    M is (Y2 - Y1) / (X2 - X1),  % Calcular la pendiente (m)
    B is Y1 - M * X1,           % Calcular el término independiente (b)
    assert(ecuacion_recta(M, B)). % Almacenar la ecuación en la memoria

% Regla para evaluar la ecuación de la recta en un valor de x y obtener el valor de y
evaluar_ecuacion_recta(X, Y) :-
    ecuacion_recta(M, B),   % Recuperar la ecuación almacenada
    Y is M * X + B.         % Evaluar la ecuación en x para obtener y


%Ejercicio 2
%
% Regla para crear una secuencia a partir de una lista de sublistas
crear_secuencia([], []).
crear_secuencia([[N, Char] | Resto], Secuencia) :-
    repetir_caracter(N, Char, Repeticion),
    crear_secuencia(Resto, RestoSecuencia),
    append(Repeticion, RestoSecuencia, Secuencia).

% Regla para repetir un carácter N veces
repetir_caracter(0, _, []).
repetir_caracter(N, Char, [Char | Resto]) :-
    N > 0,
    N1 is N - 1,
    repetir_caracter(N1, Char, Resto).




